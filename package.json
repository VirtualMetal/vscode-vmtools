{
  "name": "vmtools",
  "displayName": "VirtualMetal",
  "description": "VirtualMetal Development Tools",
  "publisher": "VirtualMetal",
  "repository": {
    "type": "git",
    "url": "https://github.com/VirtualMetal/vscode-vmtools.git"
  },
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.67.0"
  },
  "categories": [
    "Other"
  ],
  "extensionDependencies": [
    "ms-vscode.cpptools"
  ],
  "activationEvents": [
    "onCommand:vmtools.helloWorld"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "vmtools.helloWorld",
        "title": "Hello World"
      }
    ],
    "languages": [
      {
        "id": "vmconf",
        "aliases": [
          "VirtualMetal Configuration", "vmconf"
        ],
        "extensions": [
          "vmconf"
        ],
        "configuration": "./lang/language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vmconf",
        "scopeName": "source.vmconf",
        "path": "./lang/vmconf.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./dist/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.67.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "typescript": "^4.9.3"
  }
}
